{
  "compilerOptions": {
    "baseUrl": "./",
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "paths": {
      "@interfaces": ["src/interfaces"],
      "@hooks": ["src/hooks"]
    }
  },
  "include": ["src"]
}
